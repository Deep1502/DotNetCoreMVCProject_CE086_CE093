@model AirlineReservationCore.Models.Booking

@{
    ViewData["Title"] = "BookFlight";
    var flightId = ViewData["FlightId"];
    var userId = ViewData["UserId"];
    var error = ViewData["Error"];
}

<h1>BookFlight</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookFlight">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FlightId" value="@flightId" />
            <input type="hidden" asp-for="UserId" value="@userId" />
            <input type="hidden" asp-for="Cost" value="0" />
            <div class="form-group">
                <label asp-for="Seats" class="control-label"></label>
                <input asp-for="Seats" class="form-control" />
                <span class="text-danger">@error</span>
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Flight" asp-action="ViewFlights">Back to flights</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
